<?xml version='1.0' encoding='UTF-8'?>
<!-- This file contains items that cannot be identified with an annotation -->
<!-- Use NetBeans auto-complete feature to see all the possible options -->
<faces-config version="2.2"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">
    <application>
        <!-- Referencing bundles is on important item in this file -->
        <resource-bundle>
            <base-name>bundles.messages</base-name>
            <var>msgs</var>
        </resource-bundle>
        
        <navigation-rule>
            <navigation-case>
                <from-outcome>success</from-outcome>
                <to-view-id>/home.xhtml</to-view-id>         
            </navigation-case>
         </navigation-rule>
        
    </application>
</faces-config>